<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".MainIsletmeEkrani">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="İŞLETME PANELİ"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRandevular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/buttonarkaplan"
        android:backgroundTint="@android:color/white"
        android:text="RANDEVULAR"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle" />

    <Button
        android:id="@+id/btnHizmetler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/buttonarkaplan"
        android:backgroundTint="@android:color/white"
        android:text="HİZMETLER"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/btnRandevular"
        app:layout_constraintStart_toStartOf="@+id/btnRandevular"
        app:layout_constraintTop_toBottomOf="@+id/btnRandevular" />

    <Button
        android:id="@+id/btnProfil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/buttonarkaplan"
        android:backgroundTint="@android:color/white"
        android:text="PROFİL"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/btnHizmetler"
        app:layout_constraintStart_toStartOf="@+id/btnHizmetler"
        app:layout_constraintTop_toBottomOf="@+id/btnHizmetler" />

    <Button
        android:id="@+id/btnCikis"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/buttonarkaplan"
        android:backgroundTint="@android:color/white"
        android:text="ÇIKIŞ YAP"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/btnProfil"
        app:layout_constraintStart_toStartOf="@+id/btnProfil"
        app:layout_constraintTop_toBottomOf="@+id/btnProfil" />

</androidx.constraintlayout.widget.ConstraintLayout> 