<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil Yazısı"
        android:textStyle="bold"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTextProfilYazisi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Profil yazınızı girin..."
        android:minLines="2"
        android:maxLines="5"
        android:gravity="top|start"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnProfilKaydet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kaydet"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Çalışanlar"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">
        <EditText
            android:id="@+id/editTextCalisanAdi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Çalışan Adı" />
        <EditText
            android:id="@+id/editTextCalisanRol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Rol (opsiyonel)" />
        <Button
            android:id="@+id/btnCalisanEkle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ekle" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/calisanlarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

</LinearLayout> 