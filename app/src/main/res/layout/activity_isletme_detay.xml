<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewIsletmeAdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="İşletme Adı"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textViewAdres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adres"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textViewAciklama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Açıklama"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textViewProfilYazisi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profil yazısı burada gözükecek."
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnCalisanlariGor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Çalışanları Gör"
        android:layout_marginBottom="8dp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.1"
        android:rating="4.7"
        android:isIndicator="true"
        android:layout_marginBottom="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TableLayout
            android:id="@+id/tableLayoutHizmetler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*" />
    </ScrollView>

</LinearLayout> 